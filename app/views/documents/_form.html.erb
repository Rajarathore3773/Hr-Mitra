<%= form_with model: document do |form|%>

<div class="row">
    <div class = "col-lg-4"> 
                <div class="from-group">
                    <%=form.label :name, class:'mb-2'%>
                    <%= form.text_field :name, class:"form-control form-control-lg rounded-0"%>
                </div>
                <% @document.errors.full_messages_for(:name).each do |msg|%>
                    <p class = "text-danger"><%= msg%> </p>
                <% end%>
    

    
            <!--    # Drop_Down for Doc_Type
                  <div class="from-group">
                    <%=form.label :doc_type, class:'mb-2'%>
                    <%= form.text_field :doc_type, class:"form-control form-control-lg rounded-0"%>
                </div> -->

                <div class="from-group">
                    <%=form.label :doc_type, class:'mb-2 mt-2'%>
                    <%= form.select :doc_type , options_for_select(Document::DOC_TYPES, selected: document.doc_type), 
                    {prompt: 'Select Document Type'}, class: "form-select form-select-lg rounded-0"%>
                </div>

                <% @document.errors.full_messages_for(:doc_type).each do |msg|%>
                    <p class = "text-danger"><%= msg%> </p>
                <% end%>
    
    
                <div class="from-group">
                    <%=form.label :employee_id, class:'mb-2 mt-2'%>
                   <%= form.select :employee_id , options_for_select(Employee.all.map{|employee| [employee.name_with_email , employee.id]}, selected: document.doc_type), 
                    {prompt: 'Select Employee Type'}, class: "form-select form-select-lg rounded-0"%>

                     <%#= form.select :employee_id , options_for_select(Employee.pluck(:name,:id), selected: document.doc_type), 
                    {prompt: 'Select Employee Type'}, class: "form-select form-select-lg rounded-0"%>


                <!--    <%= form.number_field :employee_id, class:"form-control form-control-lg rounded-0"%>  -->
                </div>
               <% @document.errors.full_messages_for(:employee_id).each do |msg|%>
                    <p class = "text-danger"><%= msg%> </p>
                <% end%>


                 <div class="from-group">
                 <%= form.label :image, class:'mb-2 mt-4'%>
                 <%=form.file_field :image%>
                 </div>
    </div>

</div>

<div class="row">
   <div class= "col-lg-4 mt-3">
     <%= form.submit class: "btn btn-primary btn-lg mb-4 rounded-0"%>
     <%= link_to "Back To Documents" , documents_path,class: "btn btn-outline-primary btn-lg mb-4 rounded-0" %>
   </div>
</div>

<%end%>